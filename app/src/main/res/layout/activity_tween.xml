<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:clickable="false">
        <Button
            android:id="@+id/bt_alpha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/txt_color"
            android:textColor="@color/clickspan_color"
            android:text="透明"/>
        <Button
            android:id="@+id/bt_scale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/txt_color"
            android:textColor="@color/clickspan_color"
            android:text="缩放"/>
        <Button
            android:id="@+id/bt_rotate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/txt_color"
            android:textColor="@color/clickspan_color"
            android:text="翻转"/>
        <Button
            android:id="@+id/bt_translate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/txt_color"
            android:textColor="@color/clickspan_color"
            android:text="移动"/>
        <Button
            android:id="@+id/tb_set"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/txt_color"
            android:textColor="@color/clickspan_color"
            android:text="组合"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_wheel"/>
</RelativeLayout>