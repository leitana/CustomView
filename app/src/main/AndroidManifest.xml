<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="custom.lx.com.customview">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/iron_man"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iron_man"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 配置APP ID -->
        <meta-data
            android:name="BUGLY_APPID"
            android:value="40cb5aabf3" />
        <!-- 配置APP版本号 -->
        <meta-data
            android:name="BUGLY_APP_VERSION"
            android:value="1.0" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recyclerview.RecyclerMainActivity" />
        <activity android:name=".recyclerview.NativeRecyclerActicity" />
        <activity android:name=".recyclerview.RecyclerWithBaseAdapter" />
        <activity android:name=".recyclerview.XRecyclerViewActivity" />
        <activity android:name=".animation.AnimationMainActivity" />
        <activity android:name=".animation.FrameAnimationActivity" />
        <activity android:name=".animation.TweenAnimationActivity" />
        <activity android:name=".animation.PropertySimpleAnimationActivity" />
        <activity android:name=".animation.PropertyViewAnimation" />
        <activity android:name=".recyclerview.TkrefreshActivity" />

        <activity android:name=".custom_view.CustomViewTestActivity"/>
        <activity android:name=".animation.FloatingAnimatorActivity"/>
        <activity android:name=".animation.viewgroupanimation.ViewGroupActivity" />
        <activity android:name=".path.PathMeasureActivity"/>
        <activity android:name=".custom_view.ScrollRulerViewActivity"/>
        <activity android:name=".svg.SvgTestActivity"/>
    </application>

</manifest>